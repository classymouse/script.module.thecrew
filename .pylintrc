[MASTER]
ignore=venv,build,.git
extension-pkg-whitelist=xbmc,xbmcvfs,xbmcaddon,xbmcgui,xbmcplugin

[MESSAGES CONTROL]
disable=
    C0114, # missing-module-docstring
    C0115, # missing-class-docstring
    C0116, # missing-function-docstring
    R0903, # too-few-public-methods
    W0611, # unused-import
    W0612, # unused-variable
    W0702, # bare-except
    W0621, # redefined-outer-name
    W0718, # broad-except

[FORMAT]
max-line-length=280
indent-string='    '

[REPORTS]
output-format=colorized
reports=no

[TYPECHECK]
# runtime-provided modules / attributes to avoid "unable to import" / "no-member" false positives
generated-members=xbmc.*,xbmcvfs.*,xbmcaddon.*,xbmcgui.*,orion,fanart_tv,trakt,cache,control,client,c,crew_errors

[DESIGN]
# raise limits to fit legacy large single-file modules used by the addon
max-args=12
max-locals=60
max-branches=40
max-statements=300
max-parents=7
max-attributes=50
min-public-methods=0
max-public-methods=50
# allow larger modules (this project has very large modules)
max-module-lines=6000